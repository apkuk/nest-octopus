# .env.template

# Make sure .env is properly ignored
git check-ignore .env

# If needed, update .gitignore
echo ".env" >> .gitignore
git add .gitignore
git commit -m "Update .gitignore"

# Octopus Energy API Key
OCTOPUS_API_KEY=your_octopus_api_key_here

# Nest API Credentials
NEST_CLIENT_ID=your_nest_client_id_here
NEST_CLIENT_SECRET=your_nest_client_secret_here

# Project Configuration
PROJECT_ID=nest-optimization

# OAuth Configuration
REDIRECT_URI=http://localhost:8080/oauth2callback

# Application Settings
PORT=8080
DEBUG=True

# Temperature Settings (Optional)
HOT_WATER_MAX_TEMP=60
HOT_WATER_MIN_TEMP=50
HEATING_MAX_TEMP=21
HEATING_MIN_TEMP=18